<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @product.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to("Edit", edit_product_path(product)) %>>
      </td>
      <td>
        <%= link_to("Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"}) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New Products', new_product_path %>

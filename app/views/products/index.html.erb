<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @product.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product)%></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.created_at %></td>
      <td><%= product.updated_at %></td>

    </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New Products', new_product_path %>
